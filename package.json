{
    "name":                              "Vingester",
    "description":                       "Ingest Web Contents as Video Streams",
    "version":                           "0.9.1",
    "author":                            "Dr. Ralf S. Engelschall",
    "main":                              "vingester-main.js",
    "devDependencies": {
        "electron":                      "12.0.2",
        "electron-builder":              "22.10.5",
        "electron-notarize":             "1.0.0",
        "cross-env":                     "7.0.3",
        "rimraf":                        "3.0.2",
        "execa":                         "5.0.0",
        "glob":                          "7.1.6",
        "shell":                         "0.8.4",
        "cross-zip":                     "4.0.0",
        "run-script-os-fix":             "1.0.4",
        "eslint":                        "7.22.0",
        "eslint-config-standard":        "16.0.2",
        "eslint-plugin-promise":         "4.3.1",
        "eslint-plugin-import":          "2.22.1",
        "eslint-plugin-node":            "11.1.0"
    },
    "dependencies": {
        "electron-log":                  "4.3.2",
        "electron-store":                "7.0.2",
        "jimp":                          "0.16.1",
        "grandiose":                     "rse/grandiose#7d8742a",
        "throttle-debounce":             "3.0.1",
        "tesladon":                      "0.1.1",
        "js-yaml":                       "4.0.0",
        "pure-uuid":                     "1.6.2",
        "vue":                           "3.0.7",
        "@fortawesome/fontawesome-free": "5.15.3",
        "typopro-web":                   "4.2.5"
    },
    "build": {
        "appId":                         "com.engelschall.apps.vingester",
        "productName":                   "Vingester",
        "asar":                          true,
        "asarUnpack":                    [],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "mac": {
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "vingester-icon.png",
            "files": [                   "!node_modules/electron-builder/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable", "arch": [ "x64" ] } ],
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage", "arch": [ "x64" ] } ],
            "executableName":            "Vingester",
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "Vingester.exe"
        }
    },
    "scripts": {
        "postinstall":                   "electron-builder install-app-deps",
        "lint":                          "eslint --config eslint.yaml --ext js *.js",
        "start":                         "cross-env DEBUG=1 electron .",
        "package":                       "node npm-package.js",
        "clean":                         "rimraf ./dist",
        "release":                       "electron-builder --publish always"
    }
}
