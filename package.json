{
    "name":                              "Vingester",
    "homepage":                          "https://vingester.app",
    "version":                           "2.1.2",
    "description":                       "Ingest Web Contents as Video Streams",
    "author":                            "Dr. Ralf S. Engelschall",
    "keywords":                          [ "web", "contents", "video", "audio", "stream", "capture", "ndi" ],
    "license":                           "GPL-3.0-only",
    "private":                           true,
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                      "12.0.9",
        "electron-builder":              "22.10.4",
        "electron-notarize":             "1.0.0",
        "cross-env":                     "7.0.3",
        "nodemon":                       "2.0.7",
        "execa":                         "5.0.0",
        "glob":                          "7.1.7",
        "shell":                         "0.8.4",
        "npm-install-fetch":             "1.3.2",
        "npm-run-all":                   "4.1.5",
        "patch-package":                 "6.4.7",
        "cross-zip":                     "4.0.0",
        "prompt-password":               "1.2.0",
        "run-script-os-fix":             "1.0.4",
        "eslint":                        "7.26.0",
        "eslint-config-standard":        "16.0.2",
        "eslint-plugin-promise":         "4.3.1",
        "eslint-plugin-import":          "2.23.3",
        "eslint-plugin-node":            "11.1.0",
        "stylelint":                     "13.13.1",
        "stylelint-config-standard":     "22.0.0",
        "htmllint-cli":                  "0.0.7"
    },
    "dependencies": {
        "electron-log":                  "4.3.5",
        "electron-store":                "8.0.0",
        "bluebird":                      "3.7.2",
        "pcm-convert":                   "1.6.5",
        "@discordjs/opus":               "0.5.0",
        "ebml":                          "3.0.0",
        "less":                          "4.1.1",
        "grandiose":                     "rse/grandiose#4c7bb35",
        "throttle-debounce":             "3.0.1",
        "js-yaml":                       "4.1.0",
        "pure-uuid":                     "1.6.2",
        "got":                           "11.8.2",
        "clone":                         "2.1.2",
        "adm-zip":                       "0.5.5",
        "dayjs":                         "1.10.4",
        "update-helper":                 "1.1.5",
        "tmp":                           "0.2.1",
        "mkdirp":                        "1.0.4",
        "rimraf":                        "3.0.2",
        "which":                         "2.0.2",
        "moment":                        "2.29.1",
        "dsig":                          "1.1.7",
        "vue":                           "3.0.11",
        "vue3-perfect-scrollbar":        "1.5.5",
        "vue-tippy":                     "6.0.0-alpha.28",
        "vue-next-select":               "2.2.0",
        "@fortawesome/fontawesome-free": "5.15.3",
        "typopro-web":                   "4.2.5"
    },
    "main":                              "vingester-main.js",
    "upd":                               [ "!eslint-plugin-promise",
                                           "!electron-builder",
                                           "!vue-next-select" ],
    "build": {
        "appId":                         "com.engelschall.apps.vingester",
        "productName":                   "Vingester",
        "asar":                          true,
        "asarUnpack":                    [ "vingester-ffmpeg.d/ffmpeg*",
                                           "node_modules/grandiose/**",
                                           "node_modules/@discordjs/opus/**" ],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "mac": {
            "target":                    [ { "target": "default", "arch": [ "x64" ] } ],
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "vingester-icon.png",
            "files": [                   "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable", "arch": [ "x64" ] } ],
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage", "arch": [ "x64" ] } ],
            "executableName":            "Vingester",
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "Vingester.exe"
        }
    },
    "scripts": {
        "install":                       "npm-run-all -s install:fetch-prolog install:fetch install:fetch-epilog",
        "install:fetch-prolog":          "node npm-install.js prolog",
        "install:fetch":                 "npm-install-fetch --config npm-install.yaml",
        "install:fetch-epilog":          "node npm-install.js epilog",
        "postinstall":                   "patch-package --patch-dir package.d && electron-builder install-app-deps",
        "lint":                          "eslint --config etc-eslint.yaml --ext js *.js && stylelint --config etc-stylelint.yaml *.css && htmllint --rc etc-htmllint.json *.html",
        "start":                         "cross-env DEBUG=1 nodemon --exec \"npx electron --trace-warnings .\" --watch . --ext html,yaml,css,js",
        "start-debug":                   "cross-env DEBUG=2 nodemon --exec \"npx electron --inspect --trace-warnings .\"  --watch . --ext html,yaml,css,js",
        "start-prod":                    "electron .",
        "package":                       "node npm-package.js",
        "clean":                         "rimraf dist",
        "distclean":                     "rimraf dist node_modules"
    }
}
