{
    "name":                              "Vingester",
    "homepage":                          "https://vingester.app",
    "version":                           "2.7.0",
    "description":                       "Ingest Web Contents as Video Streams",
    "author":                            "Dr. Ralf S. Engelschall",
    "keywords":                          [ "web", "contents", "video", "audio", "stream", "capture", "ndi" ],
    "license":                           "GPL-3.0-only",
    "private":                           true,
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                      "16.0.0",
        "electron-builder":              "22.13.1",
        "electron-notarize":             "1.1.1",
        "cross-env":                     "7.0.3",
        "nodemon":                       "2.0.15",
        "glob":                          "7.2.0",
        "shell":                         "0.8.4",
        "npm-run-all":                   "4.1.5",
        "patch-package":                 "6.4.7",
        "cross-zip":                     "4.0.0",
        "prompt-password":               "1.2.0",
        "eslint":                        "7.32.0",
        "eslint-config-standard":        "16.0.3",
        "eslint-plugin-import":          "2.25.3",
        "eslint-plugin-node":            "11.1.0",
        "stylelint":                     "14.1.0",
        "stylelint-config-standard":     "24.0.0",
        "htmllint-cli":                  "0.0.7"
    },
    "dependencies": {
        "electron-log":                  "4.4.1",
        "electron-store":                "8.0.1",
        "electron-context-menu":         "3.1.1",
        "bluebird":                      "3.7.2",
        "@rse/ffmpeg":                   "1.0.2",
        "pcm-convert":                   "1.6.5",
        "@discordjs/opus":               "0.7.0",
        "ebml":                          "3.0.0",
        "less":                          "4.1.2",
        "grandiose":                     "rse/grandiose#0179661",
        "throttle-debounce":             "3.0.1",
        "js-yaml":                       "4.1.0",
        "pure-uuid":                     "1.6.2",
        "got":                           "11.8.2",
        "clone":                         "2.1.2",
        "adm-zip":                       "0.5.9",
        "dayjs":                         "1.10.7",
        "update-helper":                 "1.1.5",
        "tmp":                           "0.2.1",
        "execa":                         "6.0.0",
        "mkdirp":                        "1.0.4",
        "rimraf":                        "3.0.2",
        "which":                         "2.0.2",
        "moment":                        "2.29.1",
        "dsig":                          "1.1.7",
        "vue":                           "3.2.22",
        "vue3-perfect-scrollbar":        "1.5.5",
        "vue-tippy":                     "6.0.0-alpha.36",
        "vue-next-select":               "2.10.2",
        "@fortawesome/fontawesome-free": "5.15.4",
        "typopro-web":                   "4.2.6"
    },
    "main":                              "vingester-main.js",
    "upd":                               [ "!eslint" ],
    "build": {
        "appId":                         "com.engelschall.apps.vingester",
        "productName":                   "Vingester",
        "asar":                          true,
        "asarUnpack":                    [ "node_modules/@rse/ffmpeg/**",
                                           "node_modules/grandiose/**",
                                           "node_modules/@discordjs/opus/**" ],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "mac": {
            "target":                    [ { "target": "default", "arch": [ "x64" ] } ],
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "vingester-icon.png",
            "files": [                   "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable", "arch": [ "x64" ] } ],
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage", "arch": [ "x64" ] } ],
            "executableName":            "Vingester",
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "Vingester.exe"
        }
    },
    "scripts": {
        "postinstall":                   "patch-package --patch-dir package.d && electron-builder install-app-deps",
        "lint":                          "eslint --config etc-eslint.yaml --ext js *.js && stylelint --config etc-stylelint.yaml *.css && htmllint --rc etc-htmllint.json *.html",
        "start":                         "cross-env DEBUG=1 nodemon --exec \"npx electron --trace-warnings .\" --watch . --ext html,yaml,css,js",
        "start-debug":                   "cross-env DEBUG=2 nodemon --exec \"npx electron --inspect --trace-warnings .\"  --watch . --ext html,yaml,css,js",
        "start-prod":                    "electron .",
        "package":                       "node npm-package.js",
        "clean":                         "rimraf dist",
        "distclean":                     "rimraf dist node_modules"
    }
}
