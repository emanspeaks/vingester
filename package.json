{
    "name":                              "Vingester",
    "homepage":                          "https://vingester.app",
    "version":                           "1.4.1",
    "description":                       "Ingest Web Contents as Video Streams",
    "author":                            "Dr. Ralf S. Engelschall",
    "keywords":                          [ "web", "contents", "video", "audio", "stream", "capture", "ndi" ],
    "license":                           "GPL-3.0-only",
    "private":                           true,
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                      "12.0.2",
        "electron-builder":              "22.10.5",
        "electron-notarize":             "1.0.0",
        "cross-env":                     "7.0.3",
        "rimraf":                        "3.0.2",
        "execa":                         "5.0.0",
        "glob":                          "7.1.6",
        "shell":                         "0.8.4",
        "cross-zip":                     "4.0.0",
        "prompt-password":               "1.2.0",
        "run-script-os-fix":             "1.0.4",
        "eslint":                        "7.23.0",
        "eslint-config-standard":        "16.0.2",
        "eslint-plugin-promise":         "4.3.1",
        "eslint-plugin-import":          "2.22.1",
        "eslint-plugin-node":            "11.1.0",
        "stylelint":                     "13.12.0",
        "stylelint-config-standard":     "21.0.0",
        "htmllint-cli":                  "0.0.7"
    },
    "dependencies": {
        "electron-log":                  "4.3.3",
        "electron-store":                "7.0.3",
        "bluebird":                      "3.7.2",
        "pcm-convert":                   "1.6.5",
        "@discordjs/opus":               "0.5.0",
        "ebml":                          "3.0.0",
        "less":                          "4.1.1",
        "jimp":                          "0.16.1",
        "grandiose":                     "rse/grandiose#3237e14",
        "throttle-debounce":             "3.0.1",
        "js-yaml":                       "4.0.0",
        "pure-uuid":                     "1.6.2",
        "got":                           "11.8.2",
        "adm-zip":                       "0.5.5",
        "dayjs":                         "1.10.4",
        "update-helper":                 "1.1.5",
        "tmp":                           "0.2.1",
        "mkdirp":                        "1.0.4",
        "dsig":                          "1.1.7",
        "vue":                           "3.0.7",
        "vue3-perfect-scrollbar":        "1.5.5",
        "vue-tippy":                     "6.0.0-alpha.28",
        "@fortawesome/fontawesome-free": "5.15.3",
        "typopro-web":                   "4.2.5"
    },
    "main":                              "vingester-main.js",
    "build": {
        "appId":                         "com.engelschall.apps.vingester",
        "productName":                   "Vingester",
        "asar":                          true,
        "asarUnpack":                    [],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "mac": {
            "target":                    [ { "target": "default", "arch": [ "x64" ] } ],
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "vingester-icon.png",
            "files": [                   "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable", "arch": [ "x64" ] } ],
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage", "arch": [ "x64" ] } ],
            "executableName":            "Vingester",
            "icon":                      "vingester-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/@eslint*/**",
                                         "!node_modules/stylelint*/**",
                                         "!node_modules/@stylelint*/**",
                                         "!node_modules/htmllint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "Vingester.exe"
        }
    },
    "scripts": {
        "postinstall":                   "electron-builder install-app-deps",
        "lint":                          "eslint --config cfg-eslint.yaml --ext js *.js && stylelint --config cfg-stylelint.yaml *.css && htmllint --rc cfg-htmllint.json *.html",
        "start":                         "cross-env DEBUG=1 electron --trace-warnings .",
        "package":                       "node npm-package.js",
        "clean":                         "rimraf ./dist"
    }
}
